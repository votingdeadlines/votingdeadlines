{
  "collectCoverageFrom": ["./src/**/*.{js,jsx,ts,tsx}", "!**/*.d.ts"],
  "testMatch": [
    "<rootDir>/src/**/?(*.)test.ts"
  ],
  "testEnvironment": "jsdom",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleFileExtensions": [
    "ts",
    "js",
    "json",
    "node"
  ],
  "globals": {
    "ts-jest": {
      "tsConfig": "./tsconfig.test.json"
    }
  }
}
